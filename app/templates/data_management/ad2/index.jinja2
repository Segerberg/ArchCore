{% extends "base.jinja2" %}
{% block content %}
{% include "data_management/_submenu.jinja2" %}
<main id="content" class="content">
  <h1>Resources</h1>

     <button hx-get="/node/add_root" hx-target="#content" hx-swap="outerHTML">Add +</button>
<table>
    <thead>
    <tr>
        <th>RefCode</th>
        <th>Title</th>
        <th>Level of Description</th>
    </tr>
    </thead>
    <tbody>
    {% if nodes %}
    {% for node in nodes %}
    <tr>
        <td><a href="{{ url_for('data_management.archival_descriptions_detail',id=node.id)}}">{{node.ref_code}}</a></td>
        <td>{{node.title}}</td>
        <td>{{node.level_of_description}}</td>
    </tr>
    {% endfor %}

    {% else %}d
        <td colspan="3">No Results</td>
    </tr>
    {% endif %}
    </tbody>
    <tfoot>
    <tr>
        <th colspan="3">
            {% if prev_url %}
            <a href="{{ prev_url }}">←&nbsp;Previous</a>{% if next_url %}&nbsp;|{% endif %}
            {% endif %}
            {% if next_url %}
            <a href="{{ next_url }}">Next&nbsp;→</a>
            {% endif %}
        </th>
    </tr>
    </tfoot>
</table>
</main>
{% endblock %}