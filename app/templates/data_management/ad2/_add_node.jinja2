<div id="node-detail-view">
<form hx-post="/node/{{ parent_node.id }}/add_child" hx-target="#details" hx-swap="outerHTML">
    <h2>Add Child Node</h2>

    <label for="title">Title:</label>
    <input type="text" name="title" id="title" required><br>

    <label for="date_start">Date Start:</label>
    <input type="date" name="date_start" id="date_start"><br>

    <label for="date_end">Date End:</label>
    <input type="date" name="date_end" id="date_end"><br>

    <label for="archival_history">Archival History:</label>
    <textarea name="archival_history" id="archival_history"></textarea><br>

    <label for="level_of_description">Level of Description:</label>
    <select name="level_of_description" id="level_of_description">
        {% for lod in lod_list %}
            <option value="{{ lod }}">{{ lod }}</option>
        {% endfor %}
    </select><br>

    <button type="submit">Save</button>
    <button type="button" hx-get="/node/{{ parent_node.id }}/details" hx-target="#details" hx-swap="outerHTML">Cancel</button>
</form>
</div>