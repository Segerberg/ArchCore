<style>
  /* Hide the default detailssummary arrow */
  summary {
    list-style: none; /* Remove default list style */
    display: flex;
    align-items: center;
    cursor: pointer;
  }

</style>
<form hx-post="{{url_for('data_management.edit_node', id=node.id)}}">
<div id="node-detail">
<h1>{{ node.title }} </h1>

<details open>
    <summary>
        <h2>IDENTITY STATEMENT AREA</h2>
    </summary>
    <p>Reference code: {{ node.ref_code }}</p>
    <p>Title: <input type="text" name="title" value="{{ node.title }}"></p>
    <p>Level of description:  <select id="level_of_description" name="level_of_description">
        {% for value in lod_list %}
        <option value="{{ value }}" {% if value == node.level_of_description %} selected{% endif %}>{{ value }}</option>
        {% endfor %}
  </select>
    <p>Start Date:<input type="date" {% if node.date_start %}value="{{ node.date_start.strftime("%Y-%m-%d") }}" {% endif %} name="date_start"></p></p>
    <p>End Date: <input type="date" {% if node.date_end %}value="{{ node.date_end.strftime("%Y-%m-%d") }}" {% endif %} name="date_end"></p>
    <p>Extent and medium: <input type="text" name="extent" value="{% if node.extent %}{{ node.extent }}{% endif %}"></p>
</details>

<details open>
    <summary>
        <h2>CONTEXT AREA</h2>
    </summary>
        <p>Name of creator(s):X</p>
        <p>Archival history:<br>
            <textarea id="archival_history" name="archival_history" rows="6" cols="60">{% if node.archival_history  %}{{ node.archival_history }} {% endif %}</textarea>
        </p>
</details>
<details>
    <summary>
        <h2>NOTES</h2>
    </summary>
    <p>Content goes here...</p>
</details>

<details open>
    <summary>
        <h2>ACCESS POINTS</h2>
    </summary>
</details>
</div>
    <button class="btn">Save ðŸ’¾</button>
</form>