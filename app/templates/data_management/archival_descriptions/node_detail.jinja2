<style>
details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
}
</style>
<div id="node-detail-view">
    <details open>
        <summary class="summary-header">
            <h2>IDENTITY STATEMENT AREA</h2>
        </summary>
        <p>Reference code: {{ node.ref_code }}</p>
        <p>Title: {{ node.title }}</p>
        <p>Level of description: {{ node.level_of_description }}</p>
        <p>Start Date:{% if node.date_start %} {{ node.date_start.strftime("%Y-%m-%d") }} {% endif %}</p>
        <p>End Date:{% if node.date_end %} {{ node.date_end.strftime("%Y-%m-%d") }} {% endif %}</p>
        <p>Extent and medium: {{ node.extent }}</p>
    </details>
    <details open>
        <summary class="summary-header">
            <h2>CONTEXT AREA</h2>
        </summary>
        <p>Name of creator(s):X</p>
        <p>Archival history:<br>{{ node.archival_history }}</p>
    </details>
    <details>
        <summary class="summary-header">
            <h2>NOTES</h2>
        </summary>
        <p>Content goes here...</p>
    </details>
    <details>
        <summary class="summary-header">
            <h2>ACCESS POINTS</h2>
        </summary>
        <p>Content goes here...</p>
    </details>
    <button hx-get="/node/{{ node.id }}/edit" hx-target="#node-detail-view" hx-swap="outerHTML">Edit</button>
    <button hx-get="/node/{{ node.id }}/add_child" hx-target="#node-detail-view" hx-swap="outerHTML">Add Child Node</button>
</div>